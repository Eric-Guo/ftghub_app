<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to (image_tag "ftglogo6", height: "50", id: "logo-icon"), root_path %>
    <%#= link_to "FTGHUB", root_path, id: "logo" %>
    <nav class="menu">
      <ul class="nav navbar-nav nav-left">
        <li><%= link_to t('menu.fiery'),   root_path %></li>
        <li><%= link_to t('menu.focus'), "#" %></li>
        <li><%= link_to t('menu.discover'), "#" %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to image_tag "logo-2.png", size: "22", class: "img-circle avatar" %></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> 
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('menu.users'), users_path %></li>
              <li><%= link_to t('menu.notice'), "#" %></li>
              <li><%= link_to t('menu.show'), user_path(current_user) %></li>
              <li><%= link_to t('menu.edit_password'), edit_user_registration_path %></li>
              <li><%= link_to t('menu.logout'), destroy_user_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to t('menu.sign_up'), new_user_registration_path %></li>
              <li><%= link_to t('menu.login'), new_user_session_path %></li>
            </ul>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>