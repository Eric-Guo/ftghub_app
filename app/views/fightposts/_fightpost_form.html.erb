<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@fightpost, layout: :basic, html: { multipart: true }) do |f| %>
			<%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png', label: 'Video or Picture' %>
		  <%= f.text_area :content, required: true, placeholder: "Write something..." %>
		  <%= f.text_field :tag_list, label: 'Tags' %>
		  <%= f.submit %>
		<% end %>
 	</div>
</div>
