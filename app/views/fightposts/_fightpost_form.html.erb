<%= form_for(@fightpost, layout: :horizontal, html: { multipart: true }) do |f| %>
	<%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
  <%= f.text_area :content, required: true, placeholder: "Write something..." %>
  <%= f.text_field :tag_list, label: 'Tags' %>
  <%= f.submit %>
<% end %>
