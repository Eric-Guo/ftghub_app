<div class="row login">
  <div class="col-md-8 col-md-offset-2">
    <h3>login</h3>
    <div class="row">
      <div class="col-md-6 login-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), layout: :basic) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: '' %>
          <%= f.password_field :password, autocomplete: "off", placeholder: '' %>
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, label: 'Remember?' %>
          <% end -%>
          <%= f.submit "Log in", class: 'btn btn-info' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col-md-6 weixin">
        <%= link_to (fa_icon "weixin", text: "微信登录"), "#", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

