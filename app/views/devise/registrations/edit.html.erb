<%#= resource_name.to_s.humanize %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Edit Password</h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :basic) do |f| %>
      <%#= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", help: 'leave blank if you don\'t want to change it' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.password_field :current_password, autocomplete: "off", help: 'we need your current password to confirm your changes' %>
      <%= f.submit "Update" %>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, context: :danger %></p>

    <%= link_to "Back", :back %>
  </div>
</div>

