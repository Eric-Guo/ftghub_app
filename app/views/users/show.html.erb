<%= provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag("user.jpg", size: "80", alt: @user.name, class: "gravatar") %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="stats">
      <% if @profile.nil? %>
        <%= link_to "Not Profile" %>
      <% else %>
        <%= link_to "Show Profile", profile_path(@profile) %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.fightposts.any? %>
      <h3>Fightposts (<%= @user.fightposts.count %>)</h3>
      <ol class="fightposts">
        <%= render @fightposts %>
      </ol>
      <%= will_paginate @fightposts %>
    <% end %>
  </div>
</div>
