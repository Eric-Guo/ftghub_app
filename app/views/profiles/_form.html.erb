<%= simple_form_for @profile, url: profile_path, html: { multipart: true } do |f| %>
	<%= f.input :avatar, accept: 'image/jpeg, image/gif, image/png' %>
	<%= f.input :fullname %>
	<%= f.input :sex, as: :radio_buttons,
    collection: ['Male', 'Female'], wrapper: :vertical_radio_and_checkboxes %>
  <%= f.input :birthday %>
  <%= f.input :tel %>
  <%= f.input :introduction, as: :text, required: true, placeholder: "Write something..." %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
